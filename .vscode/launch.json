    "version": "0.2.0",
    "configurations": [
        {
            "name": "Build and run",
            "type": "cppdbg",
            "miDebuggerPath": "gdb.exe",
            "request": "launch",
            "program": "${workspaceFolder}\\build\\engine",
            "preLaunchTask": "Build",
            "args": [
                "-resourcesRoot", "${workspaceFolder}\\resources"
            ],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Run",
            "type": "cppdbg",
            "miDebuggerPath": "gdb.exe",
            "request": "launch",
            "program": "${workspaceFolder}\\build\\engine",
            "args": [
                "-resourcesRoot", "${workspaceFolder}\\resources"
            ],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Attach debugger",
            "type": "cppdbg",
            "request": "attach",
            "program": "${workspaceFolder}\\build\\engine.exe",
            "MIMode": "gdb",
            "miDebuggerPath": "gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}