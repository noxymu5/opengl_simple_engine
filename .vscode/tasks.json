{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "command": "g++",
    "tasks": [
        {
            "label": "Build",
            "args": [
                "-g",
                "src\\**.cpp",
                "src\\application\\**.cpp",
                "src\\core\\**.h",
                "src\\input\\**.cpp",
                "src\\math\\**.cpp",
                "src\\render\\**.cpp",
                "src\\resource_system\\**.cpp",
                "src\\scene\\**.cpp",
                "-Ldependencies\\lib",
                "-Isrc",
                "-lopengl32",
                "-lglfw3",
                "-lglew32",
                "-Idependencies\\include",
                "-o", "build\\engine"
            ]
        }
    ]
}